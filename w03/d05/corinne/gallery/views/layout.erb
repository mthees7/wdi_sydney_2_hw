    <div class="sidebar">
      <ul>
        <li><a href='/artists'>All Artists</a></li>

        <% @nav_artists.each do |artist| %>
          <li><a href="/artists/<%= artist.id %>"><%= artist.artist_name %></a></li>
        <% end %>



       </ul>
    </div>



    <%= yield %>
  </body>
</html>
